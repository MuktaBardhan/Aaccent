---
import { Image } from "astro:assets";
import Herosection from "../../assets/Herosection.jpg"
---
<main>
  <div class="relative w-full h-[35rem]">
    {/* Background Image */}
    <div class="absolute inset-0 z-0">
      <Image class="object-cover w-full h-full" src={Herosection} alt="" />
    </div>
    
    {/* Text Overlay */}
    <div class="w-full md:w-[27rem] absolute inset-0 z-10 flex flex-col justify-left items-center text-white mt-24 md:ml-8 gap-y-8 overflow-hidden">
      <h1 class="text-xl md:text-4xl font-bold text-center">
        Personalized, effective, and affordable tutoring services for Advantage Academic Center students.
      </h1>
      <span class="text-lg font-semibold text-center">
        Excel in Science & Mathematics with Personalized Coaching
      </span>
      <button class="bg-white px-4 py-3 w-4/5 md:w-2/3 text-black font-semibold text-xl">GET STARTED NOW</button>
    </div>
  </div>
</main>

